<body class="progress-page">
  <header>
    <nav>
      <div class="navbar-brand">
        <p class="navbar-item progress-header">Progress</p>
          
        <div class="navbar-item navbar-end buttons">
            <a href="./dashboard" class="button is-link" >Dashboard</a>
            <a href="./tracker-input" class="button is-link" >Log a Workout</a>
            <a href="./history" class="button is-link">View History</a>
            <a class="button is-link" id="logout"> Logout</a>
        </div>
      </div>
    </nav>
 </header> 

   <div>
      <p class="progress-text-1">Keep up the good work, {{firstName}}!</p>
   
      <div class="data-charts">
         <div>
            <p class="progress-text-2">Look at your workout consistency</p>
            {{!-- <div class="charts">
            {{dateVSlength}}
            </div> --}}
         </div>

         <div> {{! added chart tag to implement graph }}
            <canvas id="myChart"></canvas>
         </div>
         <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

         <script>
            const ctx = document.getElementById('myChart');

            new Chart(ctx, {
               type: 'line',
               // TODO: FIGURE OUT HOW TO ADD USER DATA
               data: {
                  datasets: [{
                     data: {
                        // dummy data
                        January: 10, 
                        February: 20
                     }
                  }]
               },
               options: { 
                  scales: {
                  y: {
                     beginAtZero: true
                  }
                  }
               }
            });

         </script>
         
        


         <div>
            <p class="progress-text-2">Look at your mood</p>
            <div class="charts">
            {{moodsPercentage}}
            </div>
         </div>


      </div>
   </div>
  <script src="js/data-graph.js"></script>
  <script src="js/logout.js"></script>
</body>